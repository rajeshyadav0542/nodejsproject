<% include ../includes/header.ejs %>

 <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        User Information Edit Form
        <small>Preview</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="/admin/dashboard"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="/admin/users">User</a></li>
        <li class="active">Edit User Form</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <!-- left column -->
        <div class="col-md-12">
          <!-- general form elements -->
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Edit user form</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form role="form" action=""  method="post" enctype="multipart/form-data" onsubmit="return user_validate();">
				<input type="hidden" name="userid" id="userid" value="<%= record.id %>">
              <div class="box-body">
				  <div class="row">
				  <div class="form-group col-xs-5">
                  <label for="username">User Name</label>
                  <input type="text" name="username" class="form-control" id="username" placeholder="username" value="<%= record.nickname %>">
                 <span class="validation_error"><%= errors.username ? errors.username.msg : '' %></span>
                </div>
                <div class="form-group col-xs-5">
                  <label for="exampleInputEmail1">Email address</label>
                  <input type="text" name="email" class="form-control" id="email" placeholder="Enter email" value="<%= record.email %>">
                <span class="validation_error"><%= errors.email ? errors.email.msg : '' %></span>
                </div>
                </div>
                <div class="row">
                <div class="form-group col-xs-5">
                  <label for="phonenumber">Phone Number</label>
                  <input type="text" name="phonenumber" class="form-control" id="phonenumber" placeholder="phonenumber" value="<%= record.phone %>">
				<span class="validation_error"><%= errors.phonenumber ? errors.phonenumber.msg : '' %></span>
                </div>
                <!-- select Gender-->
                <div class="form-group col-xs-5">
                  <label>Select Genderd</label>
                  <select class="form-control" name="gender">
					  <option value="M" <%= record.gender == 'M' ? 'selected' : ''%>>Male</option>
					  <option value="F" <%= record.gender == 'F' ? 'selected' : ''%>>Female</option>
                  </select>
                </div>
                </div>
                <!-- select Country-->
                <div class="row">
                <div class="form-group col-xs-5">
                  <label>Select Country</label>
                  <select class="form-control" name="country">
					  <% country.forEach(function(coountry_name){ %>
                    <option value="<%= coountry_name.country %>" <%= coountry_name.country  == record.country ? 'selected':''%>><%= coountry_name.country %></option>
                    <% }); %>
                  </select>
                </div>
                <!-- select Role-->
                <div class="form-group col-xs-5">
                  <label>Select Role</label>
                  <select class="form-control" name="role">
					  <option value="admin" <%= record.role == 'admin' ? 'selected' : ''%>>Admin</option>
					  <option value="author" <%= record.role == 'author' ? 'selected' : ''%>>Author</option>
                  </select>
                </div>
                </div>
                <div class="form-group col-xs-12">
                  <label for="exampleInputFile">File input</label>
                  <% if(record.image != ""){ %>
						<input type="text" name="avatar" id="avatar" readonly value="<%= record.image %>">
						<% } %>
                  <input type="file" name="userimage" id="exampleInputFile">

                </div>
                
              </div>
              <!-- /.box-body -->

              <div class="box-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>
    </div>
          <!-- /.box -->
          
          <% include ../includes/footer.html %>
